<%= render 'shared/errors' %>
<form action="<%= session_url %>" method="post">

  <label for="username">Username</label>
  <input
    type="text"
    name="user[username]"
    id="username"
    value="<%= @user ? @user.username : "" %>">

  <label for="password">Password</label>
  <input
    type="password"
    name="user[password]"
    id="password"
    value="<%= @user ? @user.password : "" %>">
  <br>
  <input type="submit" value="log in">
</form>